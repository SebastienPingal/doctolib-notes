{
  "manifest_version": 3,
  "name": "DoctoNote",
  "version": "1.0.0",
  "description": "Affiche les notes Google Maps des m√©decins sur Doctolib",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.doctolib.fr/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.doctolib.fr/*"],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"]
    }
  ]
} 